<div class="w-screen mx-auto sm:px-6 lg:p-10 bg-gray-800">
  <div class="text-center">
    <h2 class="text-2xl font-bold mb-2">Contact Us</h2>
    <p class="text-sm text-gray-400">
      Please fill out the form below to get in touch with us.
    </p>
  </div>

  <form
    class="mt-8 space-y-6 text-white shadow-md p-6 rounded-lg"
    action="#"
    method="POST"
  >
    <div class="grid grid-cols-2 gap-x-4 gap-y-4">
      <div>
        <label for="email" class="block text-sm font-medium"
          >Email<span class="text-red-600">*</span></label
        >
        <input
          id="email"
          name="email"
          type="email"
          autocomplete="email"
          required
          class="mt-1 p-2 block w-full rounded-md bg-gray-700"
        />
      </div>
      <div>
        <label for="name" class="block text-sm font-medium"
          >Name<span class="text-red-600">*</span></label
        >
        <input
          id="name"
          name="name"
          type="text"
          autocomplete="name"
          required
          class="mt-1 p-2 block w-full rounded-md bg-gray-700"
        />
      </div>
      <div>
        <label for="company" class="block text-sm font-medium">Company</label>
        <input
          id="company"
          name="company"
          type="text"
          autocomplete="organization"
          class="mt-1 p-2 block w-full rounded-md bg-gray-700"
        />
      </div>
      <div>
        <label for="phone" class="block text-sm font-medium">Phone</label>
        <input
          id="phone"
          name="phone"
          type="tel"
          autocomplete="tel"
          class="mt-1 p-2 block w-full rounded-md bg-gray-700"
        />
      </div>
    </div>
    <div>
      <label for="message" class="block text-sm font-medium">Message</label>
      <textarea
        id="message"
        name="message"
        rows="4"
        class="mt-1 p-2 block w-full rounded-md bg-gray-700"></textarea>
    </div>
    <div>
      <button
        type="submit"
        class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        >Submit</button
      >
    </div>
  </form>
</div>
